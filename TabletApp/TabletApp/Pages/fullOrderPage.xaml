<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="baseBackground"
             x:Class="TabletApp.Pages.fullOrderPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label
                Text="ITEM"
                Grid.Row="0"
                Grid.Column="0"/>

            <Label
                Text="PRICE"
                Grid.Row="0"
                Grid.Column="1"/>

            <StackLayout
                x:Name="foFullOrderScroll"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2">
            </StackLayout>

            <Label
                Text="ORDER TOTAL: $0.00"
                Grid.Row="2"
                Grid.Column="1"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>